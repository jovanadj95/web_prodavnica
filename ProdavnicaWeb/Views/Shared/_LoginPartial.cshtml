@using Microsoft.AspNetCore.Identity
@using ProdavnicaWeb.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right center-block">
        <div class="pull-right list-unstyled p-1">
            <a class="text-white pr-3">Pozdrav @UserManager.GetUserName(User)!</a>
            <button type="submit" class="btn btn-link navbar-btn navbar-link p-0">Odjavi se</button>
        </div>
    </form>
}
else
{
    <ul class="nav navbar-nav p-0 navbar-right">
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Register">Registracija</a></li>
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Login">Logovanje</a></li>
    </ul>
}
