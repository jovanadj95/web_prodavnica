@model ProdavnicaWeb.Models.Proizvod

@{
    ViewData["Title"] = "Brisanje";
}

<h2>Da li ste sigurni da zelite da obrisete ovaj proizvod?</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv
        </dt>
        <dd>
            @Model.Naziv
        </dd>
        <dt>
            Opis
        </dt>
        <dd>
            @Model.Opis
        </dd>
        <dt>
            Cena
        </dt>
        <dd>
            @Model.Cena
        </dd>
        <dt>
            Kategorija
        </dt>
        <dd>
            @Model.Kategorija.Naziv
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProizvodId" />
        <input type="submit" value="Obrisi" class="btn btn-default" /> |
        <a asp-action="Index">Vrati se na listu</a>
    </form>
</div>
