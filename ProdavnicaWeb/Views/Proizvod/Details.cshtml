@model ProdavnicaWeb.Models.Proizvod

@{
    ViewData["Title"] = "Detalji";
}

<h2>Detalji o proizvodu</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv proizvoda
        </dt>
        <dd>
            @Model.Naziv
        </dd>
        <dt>
            Opis proizvoda
        </dt>
        <dd>
            @Model.Opis
        </dd>
        <dt>
            Cena
        </dt>
        <dd>
            @Model.Cena
        </dd>
        <dt>
            Kategorija
        </dt>
        <dd>
            @Model.Kategorija.Naziv
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProizvodId">Izmeni</a> |
    <a asp-action="Index">Vrati se na listu</a>
</div>
